{{ attach_library('pop/add-this') }}

{% set classes = ['post'] %}


<article{{ attributes.addClass(classes) }}>

  {{ content.field_image }}

  <div class="post-date">
    <span class="day">{{ node.createdtime | date('d') }}</span>
    <span class="month">{{ node.createdtime | date('M') }}</span>
  </div>
  <div class="post-content">

    {{ title_prefix }}
    <h2{{ title_attributes }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
    {{ title_suffix }}

    <div class="post-meta">
    <span class="post-meta-user">
      <i class="fa fa-user"></i> By {{ author_name }}
    </span>
      <span class="post-meta-tag">
      <i class="fa fa-tag"></i> {{ content.field_tags }}
    </span>
      <span class="post-meta-comments">
      <i class="fa fa-comments"></i>
      <a href="{{ url }}/#comments">{{ comment_count }}</a>
    </span>
    </div>

    <div class="post-content">
      {{ content.body }}
    </div>

    <div class="post-share">
      <h3><i class="fa fa-share"></i> Share this post</h3>

      <!-- Go to www.addthis.com/dashboard to customize your tools -->
      <div class="addthis_inline_share_toolbox"></div>
    </div>

  </div>

  {{ content|without('field_image','field_teaser', 'field_tags','body') }}
</article>

